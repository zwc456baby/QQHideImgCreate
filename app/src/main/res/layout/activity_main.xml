<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:gravity="center">

    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/display_img_select_text"
                app:layout_constraintLeft_toLeftOf="@id/hideImgSelectTv"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/displayImgSelectTv"
        />
        <android.support.v7.widget.AppCompatImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/displayImgSelectTv"
                app:layout_constraintBottom_toTopOf="@id/hideImgSelectTv"
                android:id="@+id/displaySelectIv"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hide_img_select_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/displaySelectIv"
                app:layout_constraintBottom_toTopOf="@id/hideSelectIv"
                android:id="@+id/hideImgSelectTv"
                android:layout_marginTop="20dp"
        />

        <android.support.v7.widget.AppCompatImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hideImgSelectTv"
                app:layout_constraintBottom_toTopOf="@id/mixBtn"
                android:id="@+id/hideSelectIv"
        />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hideSelectIv"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/mixBtn"
                android:layout_marginTop="20dp"
                android:text="@string/display_text"
        />
    </android.support.constraint.ConstraintLayout>


</RelativeLayout>